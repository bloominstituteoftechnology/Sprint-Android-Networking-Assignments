<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GetPickerActivity">

    <Button
        android:id="@+id/simple_get_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple GET call"
        app:layout_constraintBottom_toTopOf="@+id/path_get_call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/path_get_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET call with path"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/query_get_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET call with query"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/path_get_call" />
</androidx.constraintlayout.widget.ConstraintLayout>